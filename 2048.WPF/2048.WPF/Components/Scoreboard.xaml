<UserControl x:Class="_2048.WPF.Components.Scoreboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_2048.WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="15" Orientation="Horizontal" Height="60">
        <Border BorderBrush="White" BorderThickness="1">
            <StackPanel>
                <Label>Your Score</Label>
                <TextBlock Text="{Binding CurrentScore}" Width="100" Padding="5 0 0 0" Height="30" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>

        <Border BorderBrush="White" BorderThickness="1">
            <StackPanel>
                <Label>High Score</Label>
                <TextBlock Text="{Binding HighScore}" Padding="5 0 0 0"  Width="100" Height="30" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
