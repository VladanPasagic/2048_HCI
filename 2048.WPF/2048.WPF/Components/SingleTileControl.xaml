<UserControl x:Class="_2048.WPF.Components.SingleTileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_2048.WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="1" BorderBrush="Black" Margin="5" Background="{Binding Color}" Width="90" Height="90">
        <TextBlock Text="{Binding Value}" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Border>
</UserControl>
